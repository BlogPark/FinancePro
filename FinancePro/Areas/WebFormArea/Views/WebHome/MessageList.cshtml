@model FinancePro.Areas.WebFormArea.Models.MessageListViewModel
@{
    ViewBag.Title = "消息列表";
    Layout = "~/Views/_WebFormLayout.cshtml";
}

<table width="871" border="0" cellspacing="0" cellpadding="0">
    <tr>
        <td width="11" align="left"><img src="/webasset/images/index-2-l.jpg" width="11" height="36" /></td>
        <td width="204" align="left" background="/webasset/images/index-2-bj.jpg"><strong><font style="font-size:14px" color="#000000">邮件中心</font></strong></td>
        <td width="17" align="left"><img src="/webasset/images/index-2-2.jpg" width="17" height="36" /></td>
        <td align="left" background="/webasset/images/index-2-bj.jpg"><strong><font style="font-size:14px" color="#000000">收件箱</font></strong></td>
        <td width="10" align="right"><img src="/webasset/images/index-2-3.jpg" width="10" height="36" /></td>
    </tr>
</table>
<table width="871" height="303" border="0" cellpadding="0" cellspacing="0" background="/webasset/images/bj2.jpg">
    <tr>
        <td width="11">&nbsp;</td>
        <td width="204" align="left" valign="top">
            @Html.Action("LeftWebMenu", "IndexPub", new { area = "", type = 3 })
        </td>
        <td width="13" align="left" valign="top">&nbsp;</td>
        <td width="643" align="center" valign="top">
            <table width="97%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td>&nbsp;</td>
                </tr>
            </table>
            <table width="96%" border="1" cellpadding="5" cellspacing="0" bordercolor="#666666" style="border-collapse:collapse;">
                <tr>
                    <td width="17%" height="28" align="center"><strong>标题</strong></td>
                    <td width="33%" align="center"><strong>内容</strong></td>
                    <td width="17%" align="center"><strong>时间</strong></td>
                    <td width="33%" align="center"><strong>回复内容</strong></td>
                    
                </tr>
                @foreach (var item in Model.WebContactList)
                {
                    <tr>
                        <td height="28" align="center">@item.MessageTitle</td>
                        <td align="center">@item.MessageContent</td>
                        <td align="center">@item.AddTime.ToString("yyyy-MM-dd")</td>
                        <td align="center">@item.ReplyContent</td>
                    </tr>
                }              
            </table>
            <table width="97%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td height="49" align="right">&nbsp;</td>
                </tr>
            </table>
        </td>
    </tr>
</table>


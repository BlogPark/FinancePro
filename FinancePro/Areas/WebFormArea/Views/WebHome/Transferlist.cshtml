@using Webdiyer.WebControls.Mvc
@model FinancePro.Areas.WebFormArea.Models.TransferlistViewModel
@{
    ViewBag.Title = "转账列表";
    Layout = "~/Views/_WebFormLayout.cshtml";
}

<table width="871" border="0" cellspacing="0" cellpadding="0">
    <tr>
        <td width="11" align="left"><img src="/webasset/images/index-2-l.jpg" width="11" height="36" /></td>
        <td width="204" align="left" background="/webasset/images/index-2-bj.jpg"><strong><font style="font-size:14px" color="#000000">财务管理</font></strong></td>
        <td width="17" align="left"><img src="/webasset/images/index-2-2.jpg" width="17" height="36" /></td>
        <td align="left" background="/webasset/images/index-2-bj.jpg"><strong><font style="font-size:14px" color="#000000">转账列表</font></strong></td>
        <td width="10" align="right"><img src="/webasset/images/index-2-3.jpg" width="10" height="36" /></td>
    </tr>
</table>
<table width="871" height="303" border="0" cellpadding="0" cellspacing="0" background="/webasset/images/bj2.jpg">
    <tr>
        <td width="11">&nbsp;</td>
        <td width="204" align="left" valign="top">
            @Html.Action("LeftWebMenu", "IndexPub", new { area = "", type = 1 })
        </td>
        <td width="13" align="left" valign="top">&nbsp;</td>
        <td width="643" align="center" valign="top">
            <table width="97%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td>&nbsp;</td>
                </tr>
            </table>
            <table width="96%" border="1" cellpadding="5" cellspacing="0" bordercolor="#666666" style="border-collapse:collapse;">
                <tr>
                    <td width="8%" height="28" align="center">&nbsp;</td>
                    <td width="13%" align="center"><strong>转账会员</strong></td>
                    <td width="14%" align="center"><strong>接收会员</strong></td>
                    <td width="15%" align="center"><strong>转账金额</strong></td>
                    <td width="12%" align="center"><strong>手续费</strong></td>
                    <td width="12%" align="center"><strong>转账币种</strong></td>
                    <td width="13%" align="center"><strong>转账备注</strong></td>
                    <td width="13%" align="center"><strong>转账时间</strong></td>
                </tr>
                @if (Model.transferlist != null)
                {
                    foreach (var item in Model.transferlist)
                    {
                        <tr>
                            <td height="22" align="center">@item.ID</td>
                            <td height="22">@item.LaunchMemberCode</td>
                            <td height="22">@item.ReceiveMemberCode</td>
                            <td height="22">@item.TransferNumber</td>
                            <td height="22">@item.CounterFee</td>
                            <td height="22">@item.TransferTypeName</td>
                            <td height="22">@item.TransferRemark</td>
                            <td height="22">@item.AddTime.ToString("yyyy-MM-dd")</td>
                        </tr>
                    }
                }
                <tr>
                    <td height="28" colspan="8" align="right">
                        <label></label>
                        @Html.Pager(Model.transferlist, new PagerOptions { PageIndexParameterName = "page", ShowPageIndexBox = false, PageIndexBoxType = PageIndexBoxType.DropDownList, ShowGoButton = false })
                    </td>
                </tr>
            </table>
            <table width="97%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td height="49" align="right">&nbsp;</td>
                </tr>
            </table>
        </td>
    </tr>
</table>

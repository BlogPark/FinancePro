@model FinancePro.Areas.WebFormArea.Models.WriteMessageViewModel
@{
    ViewBag.Title = "写邮件";
    Layout = "~/Views/_WebFormLayout.cshtml";
}

<table width="871" border="0" cellspacing="0" cellpadding="0">
    <tr>
        <td width="11" align="left"><img src="/webasset/images/index-2-l.jpg" width="11" height="36" /></td>
        <td width="204" align="left" background="/webasset/images/index-2-bj.jpg"><strong><font style="font-size:14px" color="#000000">邮件中心</font></strong></td>
        <td width="17" align="left"><img src="/webasset/images/index-2-2.jpg" width="17" height="36" /></td>
        <td align="left" background="/webasset/images/index-2-bj.jpg"><strong><font style="font-size:14px" color="#000000">写邮件</font></strong></td>
        <td width="10" align="right"><img src="/webasset/images/index-2-3.jpg" width="10" height="36" /></td>
    </tr>
</table>
<table width="871" height="303" border="0" cellpadding="0" cellspacing="0" background="/webasset/images/bj2.jpg">
    <tr>
        <td width="11">&nbsp;</td>
        <td width="204" align="left" valign="top">
            @Html.Action("LeftWebMenu", "IndexPub", new { area = "", type = 3 })
        </td>
        <td width="13" align="left" valign="top">&nbsp;</td>
        <td width="643" align="center" valign="top">
            <table width="97%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td>&nbsp;</td>
                </tr>
            </table>
            @using (Html.BeginForm("", "", new { area = "" }, FormMethod.Post))
            {
                <table width="96%" border="1" cellpadding="5" cellspacing="0" bordercolor="#999999" style="border-collapse:collapse;">
                    <tr>
                        <td width="24%" height="28" align="center">标题</td>
                        <td width="76%">@Html.TextBoxFor(m => m.message.MessageTitle, new { @placeholder = "标题" })</td>
                    </tr>
                    <tr>
                        <td height="28" align="center">邮件内容</td>
                        <td>@Html.TextAreaFor(m => m.message.MessageContent, new { @placeholder = "留言内容", @cols = "60", @rows = "16" }) </td>
                    </tr>
                    <tr>
                        <td height="28" colspan="2" align="center">
                            <label>
                                &nbsp;&nbsp;&nbsp;
                                <input type="submit" name="Submit2" value="发送邮件" />
                                &nbsp;&nbsp;<input type="reset" name="Submit22" value="内容重置" />
                            </label>
                        </td>
                    </tr>
                </table>
            }
            <table width="97%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td>&nbsp;</td>
                </tr>
            </table>
        </td>
    </tr>
</table>

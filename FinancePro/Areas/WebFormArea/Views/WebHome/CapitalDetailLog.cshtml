@using Webdiyer.WebControls.Mvc
@model FinancePro.Areas.WebFormArea.Models.CapitalDetailLogViewModel
@{
    ViewBag.Title = "资产收益明细";
    Layout = "~/Views/_WebFormLayout.cshtml";
}

<table width="871" border="0" cellspacing="0" cellpadding="0">
    <tr>
        <td width="11" align="left"><img src="/webasset/images/index-2-l.jpg" width="11" height="36" /></td>
        <td width="204" align="left" background="/webasset/images/index-2-bj.jpg"><strong><font style="font-size:14px" color="#000000">财务管理</font></strong></td>
        <td width="17" align="left"><img src="/webasset/images/index-2-2.jpg" width="17" height="36" /></td>
        <td align="left" background="/webasset/images/index-2-bj.jpg"><strong><font style="font-size:14px" color="#000000">收益明细</font></strong></td>
        <td width="10" align="right"><img src="/webasset/images/index-2-3.jpg" width="10" height="36" /></td>
    </tr>
</table>
<table width="871" height="303" border="0" cellpadding="0" cellspacing="0" background="/webasset/images/bj2.jpg">
    <tr>
        <td width="11">&nbsp;</td>
        <td width="204" align="left" valign="top">
            @Html.Action("LeftWebMenu", "IndexPub", new { area = "", type = 1 })
        </td>
        <td width="13" align="left" valign="top">&nbsp;</td>
        <td width="643" align="center" valign="top">
            <table width="97%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td>&nbsp;</td>
                </tr>
            </table>
            <table width="96%" border="1" cellpadding="5" cellspacing="0" bordercolor="#666666" style="border-collapse:collapse;">
                <tr>
                    <td width="18%" align="center"><strong>结算时间</strong></td>
                    <td width="23%" align="center"><strong>变动描述</strong></td>
                    <td width="9%" align="center"><strong>所属会员</strong></td>
                    <td width="10%" align="center"><strong>积分币</strong></td>
                    <td width="10%" align="center"><strong>复利币</strong></td>
                    <td width="10%" align="center"><strong>游戏币</strong></td>
                    <td width="10%" align="center"><strong>购物币</strong></td>
                    <td width="10%" align="center"><strong>购股币</strong></td>
                </tr>
                @if (Model.loglist != null)
                {
                    foreach (var item in Model.loglist)
                    {
                        <tr>
                            <td height="22">@item.AddTime.ToString("MM-dd HH:mm")</td>
                            <td height="22">@item.LogRemark</td>
                            <td height="22">@item.MemberName</td>
                            <td height="22">@((item.NMemberPoints - item.BMemberPoints) > 0 ? "+" + (item.NMemberPoints - item.BMemberPoints) : (item.NMemberPoints - item.BMemberPoints).ToString())</td>
                            <td height="22">@((item.NCompoundCurrency - item.BCompoundCurrency) > 0 ? "+" + (item.NCompoundCurrency - item.BCompoundCurrency) : (item.NCompoundCurrency - item.BCompoundCurrency).ToString())</td>
                            <td height="22">@((item.NGameCurrency - item.BGameCurrency) > 0 ? "+" + (item.NGameCurrency - item.BGameCurrency) : (item.NGameCurrency - item.BGameCurrency).ToString())</td>
                            <td height="22">@((item.NShoppingCurrency - item.BShoppingCurrency) > 0 ? "+" + (item.NShoppingCurrency - item.BShoppingCurrency) : (item.NShoppingCurrency - item.BShoppingCurrency).ToString())</td>
                            <td>@((item.NSharesCurrency - item.BSharesCurrency) > 0 ? "+" + (item.NSharesCurrency - item.BSharesCurrency) : (item.NSharesCurrency - item.BSharesCurrency).ToString())</td>
                        </tr>
                    }

                }
                <tr>
                    <td height="28" colspan="10" align="right">
                        <label></label>
                        @Html.Pager(Model.loglist, new PagerOptions { PageIndexParameterName = "page", ShowPageIndexBox = false, PageIndexBoxType = PageIndexBoxType.DropDownList, ShowGoButton = false })
                    </td>
                </tr>
            </table>
            <table width="97%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td height="49" align="right">&nbsp;</td>
                </tr>
            </table>
        </td>
    </tr>
</table>

@using Webdiyer.WebControls.Mvc
@model FinancePro.Areas.AdminArea.Models.MemberCapitalIndexViewModel
@{
    Layout = "~/Views/_AdminLayout.cshtml";
}
<!-- SAMPLE BOX CONFIGURATION MODAL FORM-->
<div class="bootbox modal fade in" id="box-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content modal-form">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">奖励会员</h4>
            </div>
            <div class="modal-body">
                <div class="bootbox-body">
                    <form role="form" class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">奖励类型：</label>
                            <div class="col-sm-7">
                                <select class="form-control" id="rewardtype" name="rewardtype">
                                    <option value="1">游戏币</option>
                                    <option value="2">股权币</option>
                                    <option value="3">购物币</option>
                                    <option value="4">会员积分</option>
                                    <option value="5">复利币</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">奖励金额：</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control" id="rewardmoney" name="rewardmoney" placeholder="奖励金额" />
                                <input type="hidden" value="0" id="rewardmemid" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">奖励备注：</label>
                            <div class="col-sm-7">
                                <textarea rows="3" class="form-control" id="rewardreason"></textarea>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取 消</button>
                <button type="button" class="btn btn-primary" onclick="rewardmoney()">确 定</button>
            </div>
        </div>
    </div>
</div>
<!-- /SAMPLE BOX CONFIGURATION MODAL FORM-->

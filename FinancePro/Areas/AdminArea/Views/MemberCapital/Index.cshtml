<div class="container">
    <div class="row">
        <div id="content" class="col-lg-12">
            <!-- PAGE HEADER-->
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-header">
                        <!-- BREADCRUMBS -->
                        <ul class="breadcrumb">
                            <li>
                                <i class="fa fa-home"></i>
                                <a href="index.html">Home</a>
                            </li>
                            <li>
                                <a href="#">会员资产管理</a>
                            </li>
                            <li>会员资产列表</li>
                        </ul>
                        <!-- /BREADCRUMBS -->
                        <div class="clearfix">
                            <h3 class="content-title pull-left">会员资产列表</h3>
                        </div>
                        <div class="description"></div>
                    </div>
                </div>
            </div>
            <div class="well well-sm">
                <div class="row">
                    <div class="col-sm-12">
                        @using (Html.BeginForm("Index", "MemberCapital", FormMethod.Get, new { @id = "form1" }))
                        {
                            <div class="form-group">
                                <label class="pull-left control-label">会员编号</label>
                                <div class="col-sm-2">
                                    @Html.TextBoxFor(m => m.membercapital.MemberCode, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="pull-left control-label">真实姓名</label>
                                <div class="col-sm-2">
                                    @Html.TextBoxFor(m => m.membercapital.MemberName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="btn-group pull-right invoice-btn-group">
                                <p class="btn-toolbar">
                                    <button class="btn btn-primary" type="submit"><i class="fa fa-search"></i>&nbsp;搜&nbsp;索</button>
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row" id="tabdiv">
                        <table class="table table-striped table-bordered" id="menutab">
                            <thead>
                                <tr>
                                    <th class="text-center">
                                        <input type="checkbox" id="chk_all" /></th>
                                    <th class="text-center">会员编号</th>
                                    <th class="text-center">真实姓名</th>
                                    <th class="text-center">游戏币</th>
                                    <th class="text-center">股权币</th>
                                    <th class="text-center">购物币</th>
                                    <th class="text-center">会员积分</th>
                                    <th class="text-center">复利币</th>
                                    <th class="text-center">操        作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.membercapitallist != null)
                                {
                                    foreach (var item in Model.membercapitallist)
                                    {
                                    <tr id="tr@(item.MemberID)" class="text-center">
                                        <td>
                                            <input type="checkbox" name="proList" value="@item.MemberID" /></td>
                                        <td>@item.MemberCode</td>
                                        <td>@item.MemberName</td>
                                        <td>@item.GameCurrency</td>
                                        <td>@item.SharesCurrency</td>
                                        <td>@item.ShoppingCurrency</td>
                                        <td>@item.MemberPoints</td>
                                        <td>@item.CompoundCurrency</td>
                                        <td>
                                            <p class="btn-toolbar">
                                                <a class="btn btn-success" data-toggle="modal"  href="#box-config" onclick="bclick(@item.MemberID)"><i class="fa fa-times-circle"></i>&nbsp; 奖&nbsp;&nbsp;励</a>
                                                <a class="btn btn-danger" data-toggle="modal"  href="#box-config1" onclick="aclick(@item.MemberID)"><i class="fa fa-times-circle"></i>&nbsp; 惩&nbsp;&nbsp;罚</a>
                                            </p>
                                        </td>
                                    </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row center col-xs-12 mycss">
                        @Html.Pager(Model.membercapitallist, new PagerOptions { PageIndexParameterName = "page", ShowPageIndexBox = false, PageIndexBoxType = PageIndexBoxType.DropDownList, ShowGoButton = false })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scriptfiles{
    <script src="@Url.Content("/js/bootbox/bootbox.min.js")"></script>
}
@section myscript{
    <script type="text/javascript">
        $(function () {
            App.init(); //Initialise plugins and elements
            //全选
            $("#chk_all").click(function () {
                if ($("#chk_all").is(":checked")) {
                    $("input[type='checkbox'][name='proList']").prop("checked", true);
                }
                else {
                    $("input[type='checkbox'][name='proList']").prop("checked", false);
                }
            });
        });
        function aclick(id) {
            $("#punishmentmemid").val(id);
        }
        function bclick(id) {
            $("#rewardmemid").val(id);
        }
        function rewardmoney() {
            var memberid = $("#rewardmemid").val();
            var count = $("#rewardmoney").val();
            var type = $("#rewardtype").val();
            var remark = $("#rewardreason").val();
            //奖励
            $.ajax({
                url: '@Url.Action("rewardmember", "MemberCapital", new { area = "AdminArea" })',
                dataType: 'Json',
                data: { 'memberid': memberid, 'type': type, 'count': count, 'remark': remark },
                type: 'POST',
                success: function (data) {
                    if (data == "1") {
                        location.reload();
                    }
                    else {
                        bootbox.alert("操作失败");
                    }
                }
            });
        }
        function punishmentmoney() {
            var memberid = $("#punishmentmemid").val();
            var count = $("#punishmentmoney").val();
            var type = $("#punishmenttype").val();
            var remark = $("#punishmentreason").val();
            //惩罚
            $.ajax({
                url: '@Url.Action("punishmentmember", "MemberCapital", new { area = "AdminArea" })',
                dataType: 'Json',
                data: { 'memberid': memberid, 'type': type, 'count': count, 'remark': remark },
                type: 'POST',
                success: function (data) {
                    if (data == "1") {
                        location.reload();
                    }
                    else {
                        bootbox.alert("操作失败");
                    }
                }
            });
        }
    </script>
}

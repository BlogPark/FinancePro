@model FinancePro.Areas.AdminArea.Models.DefaultViewModel
@{
    Layout = "~/Views/_AdminLayout.cshtml";
}
<div class="container">
    <div class="row">
        <div id="content" class="col-lg-12">
            <!-- PAGE HEADER-->
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-header">
                        <!-- STYLER -->
                        <!-- /STYLER -->
                        <!-- BREADCRUMBS -->
                        <ul class="breadcrumb">
                            <li>
                                <i class="fa fa-home"></i>
                                <a href="index.html">Home</a>
                            </li>
                            <li>主页</li>
                        </ul>
                        <!-- /BREADCRUMBS -->
                        <div class="clearfix">
                            <h3 class="content-title pull-left">主页</h3>
                        </div>
                        <div class="description"></div>
                    </div>
                </div>
            </div>
            <!-- /PAGE HEADER -->
            

            <div class="row">
                <div class="col-md-12">
                    <!-- BOX -->
                    <div class="box border red">
                        <div class="box-title">
                            <h4><i class="fa fa-home"></i><span class="hidden-inline-mobile">欢迎使用云管理平台</span></h4>
                        </div>
                        <div class="box-body">
                            <div class="tabbable header-tabs">
                                <ul class="nav nav-tabs">

                                    <li class="active"><a href="#box_tab2" data-toggle="tab"><i class="fa fa-user"></i><span class="hidden-inline-mobile">统计信息</span></a></li>
                                </ul>
                                <div class="tab-content">

                                    <div class="tab-pane fade in active" id="box_tab2">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th colspan="2">系统简要统计信息</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            
                                                <tr>
                                                    <td class="col-md-3">系统总会员数</td>
                                                    <td class="col-md-9" id="TotalMemberCount">@Model.admindata.TotalMemberCount</td>
                                                </tr>
                                                <tr>
                                                    <td class="col-md-3">系统活动会员数</td>
                                                    <td class="col-md-9">@Model.admindata.ActiveMemberCount</td>
                                                </tr>
                                                <tr>
                                                    <td class="col-md-3">系统的总报单币数量</td>
                                                    <td class="col-md-9">@Model.admindata.FormCurreyCount</td>
                                                </tr>
                                               
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /BOX -->
                </div>
            </div>
        </div>
    </div>
</div>
@section scriptfiles{
    <script src="@Url.Content("/js/bootbox/bootbox.min.js")"></script>
}
@section  myscript{
    <script type="text/javascript">
        jQuery(document).ready(function () {
            App.init(); //Initialise plugins and elements
            if ($("#TotalMemberCount").html() == '0') {
                bootbox.dialog({
                    message: "欢迎使用本系统，是否现在为系统添加初始会员？",
                    title: "初始化系统会员",
                    buttons: {
                        Cancel: {
                            label: "下次吧",
                            className: "btn-default",
                            callback: function () {
                            }
                        }
                        , OK: {
                            label: "现在去创建",
                            className: "btn-primary",
                            callback: function () {
                                window.open('/AdminArea/Member/AddMember','_self');
                            }
                        }
                    }
                });
            }
        });
    </script>
}